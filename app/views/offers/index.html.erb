
<div class="container mt-5">
<button type="button" class="btn btn-success mb-4"> <%= link_to "Create a new offer", offer_path(:new) %></button>

<h3>Here are all active offers</h3>
  <% @offers.each do |offer| %>
    <div>
      <ul>
        <li>
          <p> <strong> Donor name: </strong> <%= offer.user.first_name %> </p>
          <p> <strong> Pickup address: </strong> <%= offer.user.address %> </p>
          <p> <strong> Pickup time:  </strong> <%= offer.timeslot %></p>
          <p> <strong> Pickup time:  </strong> <%= offer.plastic_bottles %></p>
          <p> <strong> Pickup time:  </strong> <%= offer.glass_bottles %></p>
          <p> <strong> Pickup time:  </strong> <%= offer.crates %></p>
          <p> <strong> Pickup time:  </strong> <%= offer.tip %></p>
          <button type="button" class="btn btn-success accept"><%= link_to "Accept this offer", new_offer_booking %> </button>
          <br>
        </li>
    </div>
  </ul>
<% end %>
