<div class="container background-color">
<div class="title">
<h3 class="pt-3">Here are all active offers</h3>
<br>
</div>
<%# search bar %>
<form action="" class="form-page">
      <input type="search" id="searchfield" placeholder='Enter address' required data-behavior="autocomplete">
      <%= link_to offers_path do %>
        <i class="fa fa-search"></i>
      <% end %>
</form>

<%# geocoding - adding array of markers %>
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>

<ul>
  <% @offers.each do |offer| %>
    <div class="card">

        <li>
          <p> <strong> Donor name: </strong> <%= offer.user.first_name %> </p>
          <p> <strong> Pickup address: </strong> <%= offer.user.address %> </p>
          <p> <strong> Timeslot:  </strong> <%= offer.timeslot %></p>
          <p> <strong> Plastic bottles qty:  </strong> <%= offer.plastic_bottles %></p>
          <p> <strong> Glass bottles qty:  </strong> <%= offer.glass_bottles %></p>
          <p> <strong> Crates qty:  </strong> <%= offer.crates %></p>
          <p> <strong> Tip:  </strong> <%= offer.tip %></p>
          <%=
          link_to "Accept", offer_bookings_path(offer), method: :post, class: "btn accept-btn", data: { controller: :sweetalert, action: "sweetalert#fire", sweetalert_pending_value: true} %>
          <br>
        </li>
    </div>
  <% end %>

</ul>
