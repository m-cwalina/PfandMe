
<div class="container mt-5">
<h3>Here are all active offers</h3>
  <% @offers.each do |offer| %>
    <div>
      <ul>
        <li>
          <p> <strong> Donor name: </strong> <%= offer.user.first_name %> </p>
          <p> <strong> Pickup address: </strong> <%= offer.user.address %> </p>
          <p> <strong> Pickup time:  </strong> <%= offer.timeslot %></p>
          <button type="button" class="btn btn-success"><%= link_to "View details", offer_path(offer) %> </button>
          <br>
        </li>
    </div>
  </ul>
<% end %>


  <button type="button" class="btn btn-success"> <%= link_to "Create a new offer", offer_path(:new) %></button>
