<div class="container">
<h1>Your Dashboard</h1>
    <div class="card-offers mt-0">
      <% if @last_offer.user == current_user %>
        <h3><strong>Your order is still pending</strong></h3>
      <% else %>
          <h3>This is <strong><%= @last_offer.user.first_name %></strong>'s offer listing! Here are the details: </h3>
      <% end %>
        <div>

        <div>
            <p> <strong> Pickup address: </strong> <%= @last_offer.user.address %> </p>
            <p> <strong> Phone number: </strong> <%= @last_offer.user.phone_number %> </p>
            <p> <strong> Pickup time:  </strong><%= @last_offer.timeslot %></p>

          </div>
              <p> <strong> Plastic bottles: </strong> <%= @last_offer.plastic_bottles %> </p>
              <p> <strong> Glass bottles: </strong> <%= @last_offer.glass_bottles %> </p>
              <p> <strong> Bottle crates: </strong> <%= @last_offer.crates %> </p>
              <p> <strong> Tip: </strong> â‚¬<%= @last_offer.tip %> </p>
              <p> <strong> Comment: </strong> <%= @last_offer.comment %> </p>
        </div>
        <div class = "flex-dark">
          <button type="button" class="btn accept-btn"><%= link_to "Delete", offer_path(@last_offer), method: :delete %></button>
        </div>
        <br>
        <div class = "flex-dark">
          <button type="button" class="btn accept-btn"><%= link_to "Edit", edit_offer_path(@last_offer) %></button>
        </div>
      </div>
</div>
