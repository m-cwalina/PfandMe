<div class="background-color-light-box">


  <div class="container" style="margin-top: 50%;">
    <div class="top">
      <div class="header"><h1>PfandMe</h1></div>
    </div>
    <% if current_user && current_user.donor %>
    <h5 style="text-align: center; margin: 10px 0 20px 0px">Get those pesky bottles out of your flat or office!</h5>
    <div class="flex-dark">
      <%= link_to new_offer_path do %>
        <div class="btn btn-purple">Create Offer</div>
      <% end %>
    </div>
    <% else %>
    <div class="flex-dark">
      <%= link_to offers_path do %>
        <div class="btn btn-purple">Look for offers</div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
