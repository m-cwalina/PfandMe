<div id="app" class="fixed-bottom">
	<ul class="list-footer">
		<li class="home">
    <% if current_user.donor %>
        <%= link_to new_offer_path do %>
        <i class="fas fa-plus"></i>
        <% end %>
    <% else %>
        <%= link_to offers_path  do %>
        <i class="fas fa-plus"></i>
        <% end %>
    <% end %>
    </li>
		<li class="history"><%= link_to history_path do %>
    <i class="fas fa-history"></i>
    <% end %>
    </li>
		<li class="logout"><%= link_to destroy_user_session_path, method: :delete do %>
      <i class="fas fa-sign-out-alt"></i>
    </li>
    <% end %>
	</ul>
</div>
